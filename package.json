{
  "name": "semadiff",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @semadiff/github-extension dev",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "format:check": "biome check . --formatter-enabled=true --linter-enabled=false",
    "prepare": "bun scripts/setup-hooks.mjs && effect-language-service patch",
    "typecheck": "tsc -b",
    "typecheck:app": "pnpm --filter pr-viewer typecheck",
    "test": "vitest run",
    "test:app": "pnpm --filter pr-viewer test",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "compare:semanticdiff-lines": "bun scripts/compare-semanticdiff-lines.mjs",
    "quality": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm typecheck:app && pnpm test:coverage && pnpm test:app"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@effect/language-service": "^0.71.2",
    "@effect/vitest": "^0.14.2",
    "effect": "^3.19.14",
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.14.15",
    "@vitest/coverage-v8": "^2.1.3",
    "tree-sitter-cli": "^0.26.3",
    "typescript": "^5.6.3",
    "ultracite": "^7.0.12",
    "vitest": "^2.1.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@parcel/watcher",
      "@swc/core",
      "esbuild",
      "msgpackr-extract",
      "tree-sitter",
      "tree-sitter-cli",
      "tree-sitter-css",
      "tree-sitter-javascript",
      "tree-sitter-markdown",
      "tree-sitter-toml",
      "tree-sitter-typescript",
      "tree-sitter-yaml"
    ]
  },
  "dependencies": {
    "@tree-sitter-grammars/tree-sitter-markdown": "^0.3.2",
    "@tree-sitter-grammars/tree-sitter-yaml": "^0.7.1"
  }
}
